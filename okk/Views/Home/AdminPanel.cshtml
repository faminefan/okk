@model List<Сlothing>
<h1>Products Admin Panel</h1>

<a class="btn btn-primary" asp-controller="Home" asp-action="Create">Create clothes</a>

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Photo</th>
            <th scope="col">Title</th>
            <th scope="col">Size</th>
            <th scope="col">Material</th>
            <th scope="col">Price</th>
            <th scope="col">Brand</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var i in Model)
        {
            <tr>
                <th scope="row">@i.Id</th>
                <td>
                    <img height="50" src="https://picsum.photos/800/600" />
                </td>
                <td>@i.Title</td>
                <td>@i.Size</td>
                <td>@i.Material</td>
                <td>@i.Price</td>
                <td>@i.Brand</td>
                <td>
                    <a class="btn btn-danger" asp-controller="Home" asp-action="Delete" asp-route-id="@i.Id">Delete</a>
                    <a class="btn btn-dark" asp-controller="Home" asp-action="Details" asp-route-id="@i.Id">View</a>
                </td>
            </tr>
        }
    </tbody>
</table>