@model okk.Models.Сlothing

<div class="container py-5">
    <div class="row g-4">

        <!-- Product Images -->
        <div class="col-md-6">
            <div class="border rounded p-3 bg-white">
                <img id="mainImage" src="https://via.placeholder.com/500x600" class="img-fluid rounded" alt="Product">
            </div>

            <div class="mt-3 d-flex gap-2">
                <img src="https://via.placeholder.com/100x120" class="thumb-img rounded" width="100"
                     onclick="document.getElementById('mainImage').src=this.src">
                <img src="https://via.placeholder.com/100x120/ddd" class="thumb-img rounded" width="100"
                     onclick="document.getElementById('mainImage').src=this.src">
                <img src="https://via.placeholder.com/100x120/aaa" class="thumb-img rounded" width="100"
                     onclick="document.getElementById('mainImage').src=this.src">
            </div>
        </div>

        <!-- Product Details -->
        <div class="col-md-6">
            <h2 class="fw-bold">@Model.Title</h2>
            <p class="text-muted">ID: @Model.Id</p>

            <h3 class="text-primary">$@Model.Price</h3>

            <p class="mt-4">
                Brand: <b>@Model.Brand</b><br />
                Material: <b>@Model.Material</b><br />
                Size: <b>@Model.Size</b>
            </p>

            <!-- Size Options -->
            <div class="mt-4">
                <h6 class="fw-bold">Choose Size:</h6>
                <div class="d-flex gap-2">
                    <button class="btn btn-outline-dark">S</button>
                    <button class="btn btn-outline-dark">M</button>
                    <button class="btn btn-outline-dark">L</button>
                    <button class="btn btn-outline-dark">XL</button>
                </div>
            </div>

            <!-- Quantity -->
            <div class="mt-4">
                <h6 class="fw-bold">Quantity:</h6>
                <input type="number" value="1" min="1" class="form-control" style="width:100px;">
            </div>

            <div class="mt-4 d-flex gap-3">
                <button class="btn btn-primary btn-lg">Add to Cart</button>
                <a href="/Checkout/Buy/@Model.Id" class="btn btn-outline-dark btn-lg">Buy Now</a>
            </div>

        </div>
    </div>
</div>
