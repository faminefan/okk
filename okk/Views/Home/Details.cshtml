<div class="container py-5">
    <div class="row g-4">

        <!-- Product Images -->
        <div class="col-md-6">
            <div class="border rounded p-3 bg-white">
                <img id="mainImage" src="https://via.placeholder.com/500x600" class="img-fluid rounded" alt="Product">
            </div>

            <div class="mt-3 d-flex gap-2">
                <img src="https://via.placeholder.com/100x120" class="thumb-img rounded" width="100"
                     onclick="document.getElementById('mainImage').src=this.src">
                <img src="https://via.placeholder.com/100x120/ddd" class="thumb-img rounded" width="100"
                     onclick="document.getElementById('mainImage').src=this.src">
                <img src="https://via.placeholder.com/100x120/aaa" class="thumb-img rounded" width="100"
                     onclick="document.getElementById('mainImage').src=this.src">
            </div>
        </div>

        <!-- Product Details -->
        <div class="col-md-6">
            <h2 class="fw-bold">Men's Casual Jacket</h2>
            <p class="text-muted">SKU: JCK-2025</p>

            <h3 class="text-primary">$59.99</h3>

            <p class="mt-4">
                A premium-quality casual jacket perfect for everyday wear. Made from breathable material
                with a stylish modern fit.
            </p>

            <!-- Size Options -->
            <div class="mt-4">
                <h6 class="fw-bold">Choose Size:</h6>
                <div class="d-flex gap-2">
                    <button class="btn btn-outline-dark">S</button>
                    <button class="btn btn-outline-dark">M</button>
                    <button class="btn btn-outline-dark">L</button>
                    <button class="btn btn-outline-dark">XL</button>
                </div>
            </div>

            <!-- Color Options -->
            <div class="mt-4">
                <h6 class="fw-bold">Color:</h6>
                <div class="d-flex gap-2">
                    <button class="btn btn-secondary rounded-circle" style="width:35px; height:35px;"></button>
                    <button class="btn btn-dark rounded-circle" style="width:35px; height:35px;"></button>
                    <button class="btn btn-primary rounded-circle" style="width:35px; height:35px;"></button>
                </div>
            </div>

            <!-- Quantity -->
            <div class="mt-4">
                <h6 class="fw-bold">Quantity:</h6>
                <input type="number" value="1" min="1" class="form-control" style="width:100px;">
            </div>

            <!-- Buttons -->
            <div class="mt-4 d-flex gap-3">
                <button class="btn btn-primary btn-lg">Add to Cart</button>
                <button class="btn btn-outline-dark btn-lg">Buy Now</button>
            </div>

        </div>
    </div>

    <!-- Description / Reviews Tabs -->
    <div class="row mt-5">
        <div class="col-md-12">
            <ul class="nav nav-tabs" id="detailsTab" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" data-bs-toggle="tab" href="#description">Description</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-bs-toggle="tab" href="#reviews">Reviews</a>
                </li>
            </ul>

            <div class="tab-content p-4 bg-white border border-top-0">
                <div class="tab-pane fade show active" id="description">
                    <h5>Product Description</h5>
                    <p>This jacket is designed using premium-grade fabric ensuring maximum comfort and durability.</p>
                </div>

                <div class="tab-pane fade" id="reviews">
                    <h5>Customer Reviews</h5>
                    <p>No reviews yet.</p>
                </div>
            </div>
        </div>
    </div>

</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>