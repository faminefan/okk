@model Order
<h1>Update Ordery</h1>

<form asp-action="SaveNew">
    <div class="mb-3">
        <label class="form-label">Id</label>
        <input asp-for="Id" disabled readonly type="text" class="form-control" placeholder="Enter ID">
    </div>

    <div class="mb-3">
        <label class="form-label">Client</label>
        <input asp-for="Client" type="text" class="form-control" placeholder="Enter name">
    </div>

    <div class="mb-3">
        <label class="form-label">Date</label>
        <input asp-for="Date"
               type="text"
               class="form-control"
               placeholder="Enter date">
    </div>

    <div class="mb-3">
        <label for="formGroupExampleInput2" class="form-label">Total Price</label>
        <input asp-for="TotalPrice" type="text" class="form-control" id="formGroupExampleInput2" placeholder="Another input placeholder">
    </div>

    <button type="submit" class="btn btn-success">Save</button>
</form>